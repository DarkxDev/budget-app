<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Username' %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>

  <%= f.password_field :password, autocomplete: "new-password",
  placeholder: (@minimum_password_length ? "#{@minimum_password_length} Characters Minimum" : nil) %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password' %>

  <%= f.submit "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
